{
  "name": "sgs-helper-app",
  "version": "1.0.0",
  "main": "main.js",
  "author": "kritth",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.krit.sgshelper",
    "productName": "SGS Helper",
    "files": [
      "**/*",
      "!node_modules/electron-builder/**",
      "!dist/**"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64","ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64","ia32"]
        }
      ],
      "publisherName": "Krit"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "electron": "^38.2.0",
    "electron-builder": "^24.6.0"
  }
}
